{
    "env": {
        "browser": false,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "standard",
        "plugin:node/recommended",
        "plugin:import/recommended",
        "plugin:promise/recommended"
    ],
    "plugins": [
        "promise",
        "node",
        "import"
    ],
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "semi": 0
    }
}
